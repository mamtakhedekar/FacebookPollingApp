<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="FacebookPoll">
		<description>Entity classes for storing Poll details</description>
		<jta-data-source>jdbc/serfdb</jta-data-source>
		<class>edu.stevens.cs581.domain.Polls</class>
		<class>edu.stevens.cs581.domain.ConnectionsPolled</class>
		<properties>
			<property name="eclipselink.ddl-generation.output-mode" value="sql-script"/>
		</properties>
	</persistence-unit>
</persistence>
